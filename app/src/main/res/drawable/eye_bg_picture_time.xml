<?xml version="1.0" encoding="utf-8"?>
<!-- 顶部带圆角 白色背景 灰色边框 无下边框 长方体 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <solid android:color="#60000000" />

            <corners
                android:radius="10dp" />
            <size 
                android:width="50dp"
                android:height="10dp"/>
            
            <stroke
                android:width="0.5dp"
                android:color="#c0ffffff" />

        </shape>
    </item>

</layer-list>